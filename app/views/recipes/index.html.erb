<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Tittle</th>
      <th>Instructions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.tittle %></td>
        <td><%= recipe.instructions %></td>
        <td><%= link_to 'Show', recipe, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', recipe, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
